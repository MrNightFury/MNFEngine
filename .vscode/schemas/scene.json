{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "name": {
            "type": "string"
        },
        "background": {
            "type": "string"
        },
        "entryText": {
            "type": "string"
        },
        "persistent": {
            "type": "boolean"
        },
        "entryScript": {
            "type": "string"
        },
        "objects": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "./object.json"
                    }, {
                        "type": "string"
                    }
                ]
            }
        }
    },
    "required": ["name", "background", "objects"]
}