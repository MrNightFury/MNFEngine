{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "name": {
            "type": "string"
        },
        "entryPoints": {
            "deno": {
                "type": "string"
            },
            "browser": {
                "type": "string"
            },
            "anyOf": [
                {
                    "required": ["deno"]
                },
                {
                    "required": ["browser"]
                }
            ]
        },
        "authors": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "dependencies": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": ["name", "entryPoints"]
}