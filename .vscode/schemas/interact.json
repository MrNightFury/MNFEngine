                "type": "string"
            }
        },
        "required": ["sceneId"]
    }, {
        "properties": {
            "type": {
                "const": "spawn"
            },
            "object": {
                "type": "string"
            }
        },
        "required": ["object"]
    }, {
        "properties": {
            "type": {
                "const": "delete"
            }
        },
        "required": []
    }, {
        "properties": {
            "type": {
                "const": "playSound"
